package CompareRates;

import java.sql.Connection;
import java.sql.DatabaseMetaData;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

public class SQL_Queries {

	private Connection conn;
	
	public void setConnectionString() throws ClassNotFoundException {
		  String myDriver = "org.gjt.mm.mysql.Driver";
		  String myUrl = "jdbc:mysql://localhost/WebDriverProjects";
		  Class.forName(myDriver);
		  conn = DriverManager.getConnection(myUrl, "root", "");
	}
	
	public void insertInto_BankRate() throws SQLException {

		  DatabaseMetaData dbMeta = conn.getMetaData();
		  ResultSet rs = dbMeta.getTables(null, null, "Bank%", null);
		  String sqlStatement = "INSERT INTO `BankRate` (`LineOfBusiness`, `RatePercent`) " + 
				  				"VALUES ('Credit Cards', 88.23)";
		  
		  Statement stmt = conn.createStatement();
		  stmt.execute(sqlStatement);
		  conn.close();

	}
}
